<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control', style:"height: 200px;", style:"width: 600px;" %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
